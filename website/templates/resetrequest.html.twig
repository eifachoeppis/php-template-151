{% extends "base.html.twig" %}
{% block main %}
	<form method="POST">
		<h1>Reset Password</h1>	
		<div>
			<input type="email" name="email" placeholder="E-Mail" value="{{ email }}" required></input>
		</div>
		<div>
			{% if email %}
				<p class="errormessage">
					No User found with this E-Mail.
				</p>
			{% endif %}
		</div>
		<div>
			<input type="submit" value="Reset"></input>
		</div>				
	</form>
{% endblock %}
		