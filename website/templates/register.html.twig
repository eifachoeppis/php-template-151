{% extends "base.html.twig" %}
{% block main %}
	<form method="POST">
		<h1>Register</h1>	
		<div>
			<input type="email" name="email" placeholder="E-Mail" value="{{ email }}" required></input>
		</div>
		<div>
			<input type="password" name="password" placeholder="Password" required></input>
		</div>
		<div>
			<input type="password" name="passwordConfirm" placeholder="Confirm Password" required></input>
		</div>
		<div>
			{% if email %}
				<p class="errormessage">
					This E-Mail Address is already registered.
				</p>
			{% endif %}
		</div>
		<div>
			<input type="submit" value="Register"></input>
		</div>							
	</form>		
{% endblock %}
		